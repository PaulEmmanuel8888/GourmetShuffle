        </div>
        <div class="close-search-div" id="close-search-div">
            <svg class="close-search-icon" id="close-search-icon" width="64px" height="64px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <g id="Menu / Close_LG"> <path id="Vector" d="M21 21L12 12M12 12L3 3M12 12L21.0001 3M12 12L3 21.0001" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path> </g> </g></svg>
        </div>
    </header>
        <form method="post" action="/search" class="search-form" id="search-form">
            <input class="search-input" type="search" name="search" id="search-input" autofocus>
            <input type="submit" class="search-button" value="Search">
        </form>

    <script defer>
        const searchIcon = document.getElementById('search-icon');
        const searchForm = document.getElementById('search-form');
        const closeSearchDiv = document.getElementById('close-search-div');
        const closeSearchIcon = document.getElementById('close-search-icon');

        searchIcon.addEventListener('click', ()=> {
            searchForm.classList.remove('slide-out');
            searchForm.classList.add('slide-in');
            searchForm.style.display = 'flex';
            searchIcon.style.display = 'none';
            closeSearchDiv.style.display = 'flex'
        })
        closeSearchIcon.addEventListener('click', ()=> {
            searchForm.classList.remove('slide-in');
            searchForm.classList.add('slide-out');
            searchForm.style.display = 'none';
            searchIcon.style.display = 'flex';
            closeSearchDiv.style.display = 'none';
        })

    </script>
</body>
</html>